<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Choose Saving Type"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/transparent">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(5-10)%of income"
            android:textColor="#fff"
            android:layout_weight="1"

            android:id="@+id/checkBox_l" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0000"
            android:id="@+id/txt_lowsaving"
            android:layout_weight="1"
           android:textColor="#fff"
            android:textAlignment="center"

            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/transparent">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(15-20)% of income"
            android:layout_weight="1"
            android:textColor="#fff"
            android:id="@+id/checkBox_m"
            android:checked="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0000"
            android:id="@+id/txt_meduimsaving"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textAlignment="center"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/transparent">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(30-35)% of income"
            android:layout_weight="1"
           android:textColor="#fff"
            android:id="@+id/checkBox_h" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0000"
            android:id="@+id/txt_highersaving"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textAlignment="center"

            />
    </LinearLayout>


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/transparent"
        android:textColor="#fff"
        android:id="@+id/bt_next"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

</LinearLayout>