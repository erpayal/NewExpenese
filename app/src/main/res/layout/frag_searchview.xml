<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.keep.expense.expenesekeep.Viewbylist$PlaceholderFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daily Records"
        android:id="@+id/txt_ds"
        android:textColor="#00bcd4"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#00BCD4"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/txt" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Category"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/txt_date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Amount"
            android:textColor="#fff"
            android:gravity="center"

            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/txt_tamount" />


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_listView"
        android:dividerHeight="5dp"
        android:layout_marginTop="10dp"

        android:layout_weight="1" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No expenses found"
        android:textColor="#727272"
        android:id="@+id/txt_empty_s"

       android:gravity="center" />

</LinearLayout>
